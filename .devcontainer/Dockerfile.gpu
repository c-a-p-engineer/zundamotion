# =========================================================
# CUDA + FFmpeg(prebuilt NVENC) + Python3.13（Ubuntu 22.04）
# =========================================================
FROM nvidia/cuda:13.0.0-devel-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive

# ---------------------------------------------------------
# 基本ツール
# ---------------------------------------------------------
RUN apt-get update && apt-get install -y \
    curl unzip git xz-utils ca-certificates \
 && apt-get clean

# ---------------------------------------------------------
# 日本語フォント（IPAゴシック）
# ---------------------------------------------------------
RUN apt-get update && apt-get install -y \
    fonts-ipafont-gothic \
 && apt-get clean

# ---------------------------------------------------------
# Python 3.13
# ---------------------------------------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    gnupg2 curl software-properties-common \
 && add-apt-repository ppa:deadsnakes/ppa -y \
 && apt-get update \
 && apt-get install -y --no-install-recommends \
    python3.13 python3.13-venv python3.13-dev \
 && apt-get clean

# ---------------------------------------------------------
# venv / pip
# ---------------------------------------------------------
RUN python3.13 -m ensurepip --upgrade \
 && python3.13 -m pip install --no-cache-dir --upgrade pip setuptools wheel \
 && python3.13 -m venv /opt/pyenv \
 && /opt/pyenv/bin/pip install --no-cache-dir --upgrade pip

ENV PATH="/opt/pyenv/bin:${PATH}"

# ---------------------------------------------------------
# Python パッケージ
# ---------------------------------------------------------
COPY requirements.txt .
RUN pip install --upgrade pip \
 && pip install --no-cache-dir -r requirements.txt

# ---------------------------------------------------------
# FFmpeg（NVENC対応）: 事前ビルドを展開してパスを通す（最速）
#   ※ 実行時は Driver 570+ & NVIDIA Container Toolkit 必須
#   ※ バージョン固定したい場合は build-arg で上書き可
#      例) --build-arg FFMPEG_URL=https://github.com/BtbN/FFmpeg-Builds/releases/download/2025-08-20/ffmpeg-n8.0-linux64-gpl-shared-8.0.tar.xz
# ---------------------------------------------------------
# FFmpeg（NVENC対応）: 事前ビルドを展開してパスを通す
ARG FFMPEG_URL="https://github.com/BtbN/FFmpeg-Builds/releases/latest/download/ffmpeg-master-latest-linux64-gpl-shared.tar.xz"

RUN curl -L -o /tmp/ffmpeg.tar.xz "$FFMPEG_URL" \
 && mkdir -p /opt/ffmpeg \
 && tar -xJf /tmp/ffmpeg.tar.xz -C /opt/ffmpeg --strip-components=1 \
 && ln -sf /opt/ffmpeg/bin/ffmpeg  /usr/local/bin/ffmpeg \
 && ln -sf /opt/ffmpeg/bin/ffprobe /usr/local/bin/ffprobe \
 && rm -f /tmp/ffmpeg.tar.xz

# 共有ライブラリの検索パスを通す
ENV LD_LIBRARY_PATH="/opt/ffmpeg/lib:${LD_LIBRARY_PATH}"
RUN echo "/opt/ffmpeg/lib" > /etc/ld.so.conf.d/ffmpeg.conf && ldconfig

# NVENC の存在確認
RUN ffmpeg -hide_banner -encoders | grep -E 'h264_nvenc|hevc_nvenc'
# --- ここまで置換 -------------------------------


# ---------------------------------------------------------
# ワークスペース
# ---------------------------------------------------------
WORKDIR /workspace

# ---------------------------------------------------------
# 動作確認
# ---------------------------------------------------------
RUN python3.13 --version && python --version && pip --version
